# Use this when running API inside Docker (docker compose).
# It points to service names `postgres` and `redis` from docker-compose.yml.

# App
APP_NAME="AI Music"
ENV="dev"
API_PREFIX="/api"
CORS_ORIGINS="http://localhost:5173"

# Security
JWT_SECRET="change_me"
JWT_ALG="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database (docker service name)
DATABASE_URL="postgresql+psycopg://aimusic:aimusic@postgres:5432/aimusic"

# Redis (docker service name)
REDIS_URL="redis://redis:6379/0"

# Storage (local by default)
STORAGE_BACKEND="local"  # local | s3
LOCAL_STORAGE_DIR=".data"


