# App
APP_NAME="AI Music"
ENV="dev"
API_PREFIX="/api"
CORS_ORIGINS="http://localhost:5173"

# Security
JWT_SECRET="change_me"
JWT_ALG="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
DATABASE_URL="postgresql+psycopg://aimusic:aimusic@localhost:5432/aimusic"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Storage (local by default)
STORAGE_BACKEND="local"  # local | s3
LOCAL_STORAGE_DIR=".data"

# Optional S3/R2
S3_ENDPOINT_URL=""
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_REGION="auto"
S3_BUCKET=""

# ACE-Step 1.5 (local inference)
ACE_STEP_MODEL_DIR="models/ace-step-1.5"
ACE_STEP_DEVICE="mps"
# ACE-Step settings
ACE_STEP_ENTRYPOINT=ace_step.inference:generate
ACE_STEP_MODEL_DIR=/absolute/path/to/ACE-Step-1.5/checkpoints
ACE_STEP_DEVICE=mps  # or cuda / cpu

# FLUX.1 Schnell (local inference)
FLUX_MODEL_DIR="models/flux_schnell"
FLUX_DEVICE="mps"  # mps (Mac), cuda, cpu
HUGGINGFACE_TOKEN=""  # Hugging Face token for accessing gated models (FLUX.1-schnell)


